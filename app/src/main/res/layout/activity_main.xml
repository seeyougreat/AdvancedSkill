<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_test2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="测试按钮"
            android:onClick="testGoogleAuthenticator"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_test3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="测试取消"
            android:onClick="testPointProgressBarCancel"
            android:layout_marginStart="20dp"/>
    </LinearLayout>



    <tn.uu.baselibrary.widget.SegmentTabLayout
        android:id="@+id/my_tablelayout"
        android:layout_width="260dp"
        android:layout_height="60dp"
        app:tabMode="auto"
        app:tabIndicatorHeight="0dp"
        app:tabMinWidth="60dp"/>

    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示返回App按钮"
        />

    <tn.uu.baselibrary.widget.ApertureView
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:background="@color/gray" />

    <tn.uu.baselibrary.widget.lampbackground.LampTextView
        android:id="@+id/myLampView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:hintColor="@color/green"
        app:lampBackgroundColor="@color/orange"
        app:hintWidth="4dp"
        app:lampDurationTime="1000"
        android:text="好啊好啊可以吗"
        android:layout_marginStart="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <tn.uu.baselibrary.widget.SnrProgressBar
            android:id="@+id/my_progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:max="100"
            android:progress="70" />

        <tn.uu.baselibrary.widget.SegmentProgressBar
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:max="4"
            app:progress="2"/>

    </LinearLayout>



    <SeekBar
        android:id="@+id/seek_bar_voice"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:max="100"
        />

    <Button
        android:id="@+id/btn_start_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/et_num"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:hint="请输入小数"
        android:text="0.000000006"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"/>

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <RatingBar
        android:id="@+id/rating_bar_1"
        style="?android:attr/ratingBarStyleSmall"
        android:rating="3.5"
        android:numStars="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="#ffeca011"
        android:secondaryProgressTint="#ffeca011"
        android:progressBackgroundTint="#ffe7e7e7" />

    <RatingBar
        android:id="@+id/rating_bar_2"
        style="@style/articlelist_item_ratingbar_style"
        android:rating="3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:numStars="6"
        android:stepSize="1"
        android:isIndicator="false"
        />

    <tn.uu.baselibrary.widget.PointProcessBar
        android:id="@+id/node_progress_view"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:max="5"
        android:layout_marginStart="20dp"/>

</LinearLayout>